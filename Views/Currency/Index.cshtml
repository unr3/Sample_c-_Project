@model Appa_MVC.Models.Currency

@{
    ViewBag.Title = "Appa Currencies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ibox wrapper wrapper-content animated fadeInRight white-bg page-heading">

    <div class="ibox">

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2>View/ Update Currency </h2>
            </div>

            @using (Html.BeginForm())
            {
              @Html.AntiForgeryToken()
        <div class="ibox-content form-horizontal">
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="container col-sm-8">
                        <div class="form-group col-sm-3">
                            @Html.LabelFor(model => model.EURO, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.EURO)
                                @Html.ValidationMessageFor(model => model.EURO)
                            </div>
                        </div>
                        <div class="form-group col-sm-3">
                            @Html.LabelFor(model => model.USD, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.USD)
                                @Html.ValidationMessageFor(model => model.USD)
                            </div>
                        </div>
                        <div class="form-group col-sm-3">
                            @Html.LabelFor(model => model.Parity, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Parity, new { @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.Parity)
                            </div>
                        </div>

                        <div class="form-group col-sm-3">
                            <div class="col-md-10">
                                <div class="pull-right">
                                    <input type="submit" value="Update" class="btn btn-info demo2" />
                                </div>

                            </div>
                        </div>


                    </div>
                </div>


            </div>
        </div>
            }
        </div>
    </div>
</div>

